<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaw.lab8.Additem">

    <TextView
        android:id="@+id/HintNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/EditNameEditText"
        android:layout_marginTop="50px"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <EditText
        android:id="@+id/EditNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/HintNameTextView"
        app:layout_constraintTop_toTopOf="@id/HintNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/HintNameTextView"/>

    <TextView
        android:id="@+id/HintBirthdayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生日："
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HintNameTextView"
        app:layout_constraintRight_toLeftOf="@id/EditBirthdayEditText"
        android:layout_marginTop="50px"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <EditText
        android:id="@+id/EditBirthdayEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/HintBirthdayTextView"
        app:layout_constraintTop_toTopOf="@id/HintBirthdayTextView"
        app:layout_constraintBottom_toBottomOf="@id/HintBirthdayTextView"/>

    <TextView
        android:id="@+id/HintGiftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼物："
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HintBirthdayTextView"
        app:layout_constraintRight_toLeftOf="@id/EditGiftEditText"
        android:layout_marginTop="50px"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <EditText
        android:id="@+id/EditGiftEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/HintGiftTextView"
        app:layout_constraintTop_toTopOf="@id/HintGiftTextView"
        app:layout_constraintBottom_toBottomOf="@id/HintGiftTextView"/>

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:background="#00c950"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HintGiftTextView"
        android:layout_marginTop="50px"
        />


</android.support.constraint.ConstraintLayout>
